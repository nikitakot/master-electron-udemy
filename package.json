{
  "name": "Readit",
  "version": "1.0.1",
  "description": "Master Electron Project",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec 'electron .'",
    "reset": "git reset --hard",
    "release": "electron-builder -m -p onTagOrDraft"
  },
  "repository": "https://github.com/nikitakot/master-electron-udemy",
  "homepage": "https://github.com/nikitakot/master-electron-udemy",
  "keywords": [
    "Electron",
    "Master Electron",
    "demo"
  ],
  "author": "Nikita Kot",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^5.0.10",
    "electron-builder": "^22.8.0",
    "nodemon": "^1.19.2"
  },
  "dependencies": {
    "electron-log": "^4.2.2",
    "electron-updater": "^4.3.4",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.nikitakot.readit",
    "copyright": "MIT",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "zip"
    },
    "linux": {
      "category": "Utility"
    }
  }
}
